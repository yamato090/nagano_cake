<h2 class="offset-1">商品新規登録</h2>

<div class="col-8 offset-2 mt-5">
  <%= form_with model: @product, url: admin_products_path, local: true do |f| %>
    <div class="form-group row">
      <div class="col-4"><%= f.label :商品画像 %></div>
      <div class="col-8"><%= f.attachment_field :image %></div>
    </div>

    <div class="form-group row mt-3">
      <div class="col-4"><%= f.label :商品名 %></div>
      <div class="col-8"><%= f.text_field :name, placeholder: "商品名", class: "form-control" %></div>
    </div>

    <div class="form-group row mt-3">
      <div class="col-4"><%= f.label :商品説明 %></div>
      <div class="col-8"><%= f.text_area :detail, placeholder: "ここに説明文を記述します", class: "form-control", rows: "6" %></div>
    </div>

    <div class="form-group row mt-3">
      <div class="col-4"><%= f.label :ジャンル %></div>
      <div class="col-8"><%= f.collection_select(:genre_id, Genre.all, :id, :name, {include_blank: "--選択してください--"}, {class: 'form-control'}) %></div>
    </div>

    <div class="form-group row mt-3">
      <div class="col-4"><%= f.label :税抜価格 %></div>
      <div class="col-8 d-flex flex-row"><%= f.text_field :tax_excluded_price, placeholder: "1000", class: "form-control" %>円</div>
    </div>

    <div class="form-group row mt-3">
      <div class="col-4"><%= f.label :販売ステータス %></div>
      <div class="col-8">
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, :false, class: "ml-3" %>
        <%= f.label :is_active, "販売停止中" %>
      </div>
    </div>

    <div class="text-center mt-4">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
