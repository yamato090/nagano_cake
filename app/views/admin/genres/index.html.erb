<h2 class="offset-1 mt-4">ジャンル一覧・追加</h2>

<div class="col-8 mt-5">
  <%= form_with model: @genre, url:admin_genres_path, local: true do |f| %>
    <div class="form-group row">
      <div class="col-2"><%= f.label :ジャンル名 %></div>
      <div class="col-4"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
      <div class="col-3"><%= f.submit "新規登録", class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>

<div class="row mt-5">
  <div class="col-5">
    <table class="table table-light">
      <thead class="table-active text-center">
        <tr>
          <th class="text-white bg-dark">ジャンル</th>
          <th class="text-white bg-dark"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td class="text-center"><%= genre.name %></td>
          <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>