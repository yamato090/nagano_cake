<table class="table table-light table-borderless border">
  <thead class="table-active">
    <tr>
      <th class="text-center">ジャンル検索</th>
    </tr>
  </thead>
  
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, genre_search_path('search[value]': genre.name, 'search[how]': "match"), class: "text-dark mx-3" %></td>
      </tr>
    <% end %>
  </tbody>
</table>